{
  "name": "Standard Files",
  "id": "standardfiles",
  "packaging_format": 1,
  "description": {
    "en": "End-to-end encryption for web, mobile, and desktop applications."
  },
  "version": "0.0.3~ynh1",
  "url": "https://standardfiles.org/",
  "license": "AGPL-3.0-or-later",
  "maintainer": {
    "name": "Anton Strömkvist",
    "email": "anton@stromkvist.com",
    "url": "https://github.com/ahstro"
  },
  "requirements": {
    "yunohost": ">= 3.5"
  },
  "multi_instance": true,
  "services": ["nginx", "mysql"],
  "arguments": {
    "install": [
      {
        "name": "domain",
        "type": "domain",
        "ask": {
          "en": "Choose a domain name for Standard Files",
          "fr": "Choisissez un nom de domaine pour Standard Files"
        },
        "example": "example.com"
      },
      {
        "name": "path",
        "type": "path",
        "ask": {
          "en": "Choose a path for Standard Files",
          "fr": "Choisissez un chemin pour Standard Files"
        },
        "example": "/standardfiles",
        "default": "/standardfiles"
      },
      {
        "name": "admin",
        "type": "user",
        "ask": {
          "en": "Choose an admin user",
          "fr": "Choisissez l’administrateur"
        },
        "example": "johndoe"
      },
      {
        "name": "is_public",
        "type": "boolean",
        "ask": {
          "en": "Is it a public application?",
          "fr": "Est-ce une application publique ?"
        },
        "default": false
      },
      {
        "name": "language",
        "type": "string",
        "ask": {
          "en": "Choose the application language",
          "fr": "Choisissez la langue de l'application"
        },
        "choices": ["en"],
        "default": "en"
      }
    ]
  }
}
